TOS_IMAGE_PL ?= tos-write-image
IDENT_PROGRAM_NAME ?= $(COMPONENT)

build_tosimage: FORCE
	@echo "    writing TOS image"
	@$(TOS_IMAGE_PL) $(IDENT_FLAGS) --ihex="$(MAIN_IHEX)" --exe="$(MAIN_EXE)" --objdump="$(OBJDUMP)" > $(BUILDDIR)/tos_image.xml
